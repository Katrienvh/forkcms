{% extends 'Layout/Templates/base.html.twig' %}
{% import "Layout/Templates/macros.html.twig" as macro %}

{% block actionbar %}

{% endblock %}

{% block content %}
  {% form import %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div class="form-group">
        <label for="file" class="control-label">
          {{ 'lbl.File'|trans|ucfirst }}
          {{ macro.required }}
        </label>
        {% form_field file %} {% form_field_error file %}
      </div>
      <div class="form-group">
        <div class="form-check">
          {% form_field overwrite %}
          <label for="overwrite" class="form-check-label">{{ 'msg.OverwriteConflicts'|trans }}</label>
        </div>
      </div>
    </div>
  </div>
  <div class="row fork-module-actions">
    <div class="col-md-12">
      <div class="btn-toolbar">
        <div class="btn-group ml-auto" role="group">
          {{ macro.buttonIcon('', 'upload', 'lbl.Import'|trans|ucfirst, 'btn-primary', {"type":"submit", "id":"importButton", "name":"add"}) }}
        </div>
      </div>
    </div>
  </div>
  {% endform %}
{% endblock %}
