{% extends 'Layout/Templates/base.html.twig' %}
{% import "Layout/Templates/macros.html.twig" as macro %}

{% block actionbar %}

{% endblock %}

{% block content %}
  {% form add %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div>
        <ul class="nav nav-tabs" role="tablist">
          <li class="nav-item">
            <a class="nav-link" href="#tabName" aria-controls="tabName" role="tab" data-toggle="tab" aria-selected="true" id="name-tab">{{ 'lbl.Name'|trans|ucfirst }}</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#tabDashboard" aria-controls="tabDashboard" role="tab" data-toggle="tab" aria-selected="false" id="dashboard-tab">{{ 'lbl.Dashboard'|trans|ucfirst }}</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#tabPermissions" aria-controls="tabPermissions" role="tab" data-toggle="tab" aria-selected="false" id="permissions-tab">{{ 'lbl.Permissions'|trans|ucfirst }}</a>
          </li>
        </ul>
        <div class="tab-content">
          <div role="tabpanel" class="tab-pane show active" id="tabName" aria-labelledby="name-tab">
            <div class="row">
              <div class="col-md-12">
                <div class="form-group last">
                  <label for="name" class="control-label">{{ 'lbl.Name'|trans|ucfirst }}
                    {{ macro.required }}</label>
                  {% form_field name %} {% form_field_error name %}
                </div>
              </div>
            </div>
          </div>
          <div role="tabpanel" class="tab-pane" id="tabDashboard" aria-labelledby="dashboard-tab">
            <div class="row">
              <div class="col-md-12">
                <div class="content-block">
                  <div class="content-title">
                    <h2>{{ 'lbl.DisplayWidgets'|trans|ucfirst }}</h2>
                  </div>
                  {% if widgets %}
                    {{ widgets|raw }}
                  {% endif %}
                  {% if not widgets %}
                    {{ 'msg.NoWidgets'|trans|ucfirst }}
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
          <div role="tabpanel" class="tab-pane" id="tabPermissions" aria-labelledby="permissions-tab">
            <div class="row">
              <div class="col-md-12">
                <div class="card-group" id="permissions" role="tablist" aria-multiselectable="true">
                  {% for permission in permissions %}
                    <div class="card card-transparent jsGroupsPermissionsModule">
                      <div class="card-heading" role="tab" id="permission-heading-{{ permission.id }}">
                        <div data-toggle="collapse" role="treeitem" data-parent="#permission" data-target="#permission-list-{{ permission.id }}" aria-expanded="false" aria-controls="permission-list-{{ permission.id }}">
                          <h4 class="card-title">
                            {{ permission.chk|raw }}
                            {{ macro.icon('caret-right fa-fw') }} {{ permission.label }}
                          </h4>
                        </div>
                      </div>
                      <div id="permission-list-{{ permission.id }}" class="card-collapse collapse" role="tabpanel" aria-labelledby="permission-heading-{{ permission.id }}">
                        {{ permission.actions.dataGrid|raw }}
                      </div>
                    </div>
                  {% endfor %}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div id="pageButtons" class="row fork-page-actions">
    <div class="col-md-12">
      <div class="btn-toolbar">
        <div class="btn-group pull-right" role="group">
          {{ macro.buttonIcon('', 'plus-square', 'lbl.Add'|trans|ucfirst, 'btn-primary', {"type":"submit", "id":"addButton", "name":"add"}) }}
        </div>
      </div>
    </div>
  </div>
  {% endform %}
{% endblock %}
