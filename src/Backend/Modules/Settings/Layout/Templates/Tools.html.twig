{% extends 'Layout/Templates/base.html.twig' %}

{% block content %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div class="card card-default">
        <div class="card-heading">
          <h2 class="card-title">
            {{ 'lbl.ClearCache'|trans|ucfirst }}
          </h2>
        </div>
        <div class="card-body">
          <p>{{ 'msg.ClearCache'|trans }}</p>
          <a href="#" data-role="fork-clear-cache" class="btn btn-primary">{{ 'lbl.ClearCache'|trans|ucfirst }}</a>
          <div class="alert alert-warning d-none" role="alert" data-role="fork-clear-cache-status">
            {{ 'msg.ClearingCache'|trans }}
            <span data-role="fork-dots-animation"></span>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
