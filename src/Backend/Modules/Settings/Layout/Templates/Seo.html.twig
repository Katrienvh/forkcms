{% extends 'Layout/Templates/base.html.twig' %}
{% import "Layout/Templates/macros.html.twig" as macro %}

{% block actionbar %}

{% endblock %}

{% block content %}
  {% form settingsSeo %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div class="card card-default">
        <div class="card-heading">
          <h2 class="card-title">
            {{ 'lbl.SEO'|trans|ucfirst }}
          </h2>
        </div>
        <div class="card-body">
          <div class="form-group">
            <div class="form-check">
              {% form_field seo_noodp %}
              <label for="seoNoodp" class="form-check-label">{{ 'lbl.NOODP'|trans|upper }}</label>
            </div>
            <small class="form-text text-muted">{{ 'msg.HelpSEONoodp'|trans|ucfirst|raw }}</small>
          </div>
          <div class="form-group">
            <div class="form-check">
              {% form_field seo_noydir %}
              <label for="seoNoydir" class="form-check-label">{{ 'lbl.NOYDIR'|trans|upper }}</label>
            </div>
            <small class="form-text text-muted">{{ 'msg.HelpSEONoydir'|trans|ucfirst }}</small>
          </div>
          <div class="form-group last">
            <div class="form-check">
              {% form_field seo_nofollow_in_comments %}
              <label for="seoNofollowInComments" class="form-check-label">{{ 'msg.SEONoFollowInComments'|trans|ucfirst|raw }}</label>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row fork-module-actions">
    <div class="col-md-12">
      <div class="btn-toolbar">
        <div class="btn-group ml-auto" role="group">
          {{ macro.buttonIcon('', 'floppy-o', 'lbl.Save'|trans|ucfirst, 'btn-primary', { "id":"save", "type":"submit", "name":"save" }) }}
        </div>
      </div>
    </div>
  </div>
  {% endform %}
{% endblock %}
