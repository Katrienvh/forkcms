{% extends 'Layout/Templates/base.html.twig' %}
{% import "Layout/Templates/macros.html.twig" as macro %}
{% block actionbar %}

{% endblock %}

{% block content %}
  {% form addProfileGroup %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div class="card card-default">
        <div class="card-heading">
          <h2>{{ 'lbl.Group'|trans|ucfirst }}</h2>
        </div>
        <div class="card-body">
          <div class="form-row">
            <div class="col-lg-6">
              <div class="form-group">
                <label for="group" class="control-label">{{ 'lbl.Group'|trans|ucfirst }}</label>
                {% form_field group %} {% form_field_error group %}
              </div>
            </div>
          </div>
          <label for="expirationDate" class="control-label">{{ 'lbl.ExpiresOn'|trans|ucfirst }}:</label>
          <div class="form-row">
            <div class="col-md-6">
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text">
                    <span class="fas fa-calendar fa-fw" aria-hidden="true"></span>
                    <label class="sr-only" for="expirationDate">{{ 'lbl.Date'|trans|ucfirst }}</label>
                  </span>
                </div>
                {% form_field expiration_date %}
              </div>
              {% form_field_error expiration_date %}
            </div>
            <div class="col-md-6">
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text">
                    <span class="fas fa-clock-o fa-fw" aria-hidden="true"></span>
                    <label class="sr-only" for="expirationTime">{{ 'lbl.Time'|trans|ucfirst }}</label>
                  </span>
                </div>
                {% form_field expiration_time %}
              </div>
              {% form_field_error expiration_time %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row fork-page-actions">
    <div class="col-md-12">
      <div class="btn-toolbar d-flex">
        <div class="btn-group" role="group">
          {{ macro.buttonIcon(geturl('Edit') ~ '&id=' ~ id ~ "#tabGroups", 'times', 'lbl.Cancel'|trans|ucfirst) }}
        </div>
        <div class="btn-group ml-auto" role="group">
          {{ macro.buttonIcon('', 'plus-square', 'lbl.Add'|trans|ucfirst, 'btn-primary', { "type":"submit", "id":"addButton", "name":"add" }) }}
        </div>
      </div>
    </div>
  </div>
  {% endform %}
{% endblock %}

